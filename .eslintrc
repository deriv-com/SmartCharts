{
    "parser": "babel-eslint",
    "extends": [
        "eslint:recommended",
        "eslint-config-airbnb",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "plugins": [
        "react"
    ],
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "rules": {
        "no-lonely-if": 1,
        "no-labels": 1,
        "no-new": 1,
        "func-names": 0,
        "prefer-spread": 0,
        "prefer-rest-params": 1,
        "no-useless-return": 1,
        "no-empty": 1,
        "no-restricted-globals": 0,
        "guard-for-in": 1,
        "no-nested-ternary": 1,
        "import/prefer-default-export": 1,
        "import/no-mutable-exports": 1,
        "import/no-extraneous-dependencies": 0,
        "class-methods-use-this": 0,
        "default-case": 1,
        "eqeqeq": 1,
        "template-curly-spacing": 1,
        "no-multi-spaces": 1,
        "no-multi-assign": 0,
        "block-scoped-var": 1,
        "prefer-template": 1,
        "no-continue": 0,
        "indent": [1, 4],
        "no-param-reassign": 0,
        "consistent-return": 0,
        "no-plusplus": 0,
        "camelcase": 0,
        "no-shadow": 1,
        "no-bitwise": 0,
        "one-var": 0,
        "one-var-declaration-per-line": 1,
        "no-mixed-operators": 0,
        "prefer-promise-reject-errors": 1,
        "max-len": 0,
        "no-underscore-dangle": 0,
        "prefer-const": 0,
        "prefer-destructuring": 0,
        "no-trailing-spaces": 1,
        "no-const-assign": 1,
        "no-this-before-super": 1,
        "no-unused-expressions": 2,
        "no-undef": 1,
        "no-unreachable": 1,
        "no-unused-vars": 1,
        "constructor-super": 1,
        "valid-typeof": 1,
        "no-extra-semi": 1,
        "array-bracket-spacing": 1,
        "global-require": 1,
        "curly": 1,
        "semi": 2,
        "no-console": 0,
        "no-restricted-syntax": [
            "error",
            "LabeledStatement",
            "WithStatement"
        ]
    }
}
